@model IEnumerable<GroupProject.ViewModel.UserView>

@{
    ViewBag.Title = "User Editor";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>User List</b>
        </h3>
    </div>
    <div class="panel-body">
        <div class="tablescroll">
            <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles" >
                <thead style="background-color: #eeeeee; opacity:0.975;">
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.Username)</b></td>
                        <td><b>@Html.DisplayNameFor(model => model.Email)</b></td>
                        <td><b>@Html.DisplayNameFor(model => model.UserRoles)</b></td>
                        <td><b>@Html.DisplayNameFor(model => model.Created)</b></td>
                        <td><b>@Html.DisplayNameFor(model => model.LastLogin)</b></td>
                        <td><b>Edit</b></td>
                    </tr>
                </thead>
                <tbody style="background-color: #eeeeee; opacity:0.9;">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => user.Username)</td>
                            <td>@Html.DisplayFor(model => user.Email)</td>
                            <td><b>@Html.DisplayFor(model => user.UserRoles)</b></td>
                            <td>@Html.DisplayFor(model => user.Created)</td>
                            <td>@Html.DisplayFor(model => user.LastLogin)</td>
                            <td>
                                @Html.ActionLink("Edit", "EditUser", new { id = user.UserId }, new { @class = "hyperlink" })
                                @if (user.Username != "admin")
                                {
                                    @:| @Html.ActionLink("Delete", "DeleteUser", new { id = user.UserId }, new { @class = "hyperlink" })
                                }
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            </div>
            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Create", "Admin")'">
                Create New Employee
            </button>
            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Admin")'">
                Admin Panel
            </button>
        </div>

        <div class="panel-footer">
            <p class="box-title"><b>Total Users till @String.Format("{0 : dddd, MMMM d, yyyy}", DateTime.Now)  : </b><span class="label label-primary">@Model.Count()</span></p>
        </div>
    </div>


@section scripts{
    <script>
        $(function () {
            $('#UsersWithRoles').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true
            });
        });
    </script>
}  